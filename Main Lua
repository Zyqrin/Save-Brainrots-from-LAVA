--==================================================
-- PLAYER SETUP + RESPAWN FIX
--==================================================
local LP = Players.LocalPlayer
local Char, HRP

local function SetupChar()
    Char = LP.Character or LP.CharacterAdded:Wait()
    HRP = Char:WaitForChild("HumanoidRootPart")
end
SetupChar()
LP.CharacterAdded:Connect(SetupChar)

